nextflow_process {

    name "Test process: DEEPLOOP"
    script "../main.nf"
    process "DEEPLOOP"
    tag "modules"
    tag "modules_local"
    tag "deeploop"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }

            process {
                """
                input[0] = [
                    [ id:'HiCoor_test_data'], // meta map
                    file("http://hiview.case.edu/ssz20/tmp.HiCorr.ref/HiCorr_test_data/HiCorr_output.tar.gz")
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
